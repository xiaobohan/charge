<?xml version="1.0" encoding="utf-8"?>
<DependentLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_content"
    ohos:width="match_parent"
    ohos:orientation="vertical"
    ohos:padding="15vp">

    <DirectionalLayout
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:align_parent_start="true"
        ohos:vertical_center="true">

        <Text
            ohos:id="$+id:phone"
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:text_color="#333333"
            ohos:text_size="18fp"/>

        <Text
            ohos:id="$+id:desc"
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:text_color="#666666"
            ohos:text_size="16fp"
            ohos:top_margin="5vp"/>

        <Text
            ohos:id="$+id:time"
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:text_color="#666666"
            ohos:text_size="16fp"
            ohos:top_margin="5vp"/>

    </DirectionalLayout>


    <DirectionalLayout
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:alignment="end"
        ohos:align_parent_end="true">

        <Text
            ohos:id="$+id:amount"
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:text_color="#333333"
            ohos:text_size="16fp"/>

        <Text
            ohos:id="$+id:status"
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:text_color="#666666"
            ohos:text_size="14fp"
            ohos:top_margin="5vp"/>

    </DirectionalLayout>

<!--    <Component-->
<!--        ohos:height="1vp"-->
<!--        ohos:width="match_parent"-->
<!--        ohos:align_parent_bottom="true"-->
<!--        ohos:background_element="#EEEEEE"/>-->

</DependentLayout>
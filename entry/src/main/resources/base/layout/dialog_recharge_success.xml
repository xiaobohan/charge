<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_content"
    ohos:width="match_parent"
    ohos:orientation="vertical"
    ohos:alignment="center">

    <Text
        ohos:top_margin="25vp"
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:text="充值成功"
        ohos:text_color="#000000"
        ohos:text_size="20fp"/>

    <Text
        ohos:start_padding="25vp"
        ohos:end_padding="25vp"
        ohos:id="$+id:content"
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:multiple_lines="true"
        ohos:text_color="#333333"
        ohos:text_size="14fp"
        ohos:top_margin="20vp"/>

    <Button
        ohos:bottom_margin="25vp"
        ohos:id="$+id:ok"
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:background_element="$graphic:background_bottom_button"
        ohos:bottom_padding="8vp"
        ohos:text="知道了"
        ohos:start_margin="20vp"
        ohos:end_margin="20vp"
        ohos:text_color="#FFFFFF"
        ohos:text_size="18fp"
        ohos:top_margin="20vp"
        ohos:top_padding="8vp"/>

</DirectionalLayout>